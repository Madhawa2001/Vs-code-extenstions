{
  "name": "code-analyzer-online",
  "displayName": "code-analyzer-online",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rationale.generateForFile",
    "onCommand:rationale.generateForWorkspace"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rationale.generateForFile",
        "title": "Rationale: Analyze current file"
      },
      {
        "command": "rationale.generateForWorkspace",
        "title": "Rationale: Analyze workspace"
      }
    ],
    "configuration": {
      "title": "Rationale Document Generator",
      "properties": {
        "rationale.aiEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable AI mode (sends code snippets to configured AI provider)."
        },
        "rationale.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key to use when AI mode is enabled. Keep empty to disable."
        },
        "rationale.geminiModel": {
          "type": "string",
          "default": "gemini-2.0-flash",
          "description": "Gemini model to use (if using Google Generative AI)."
        },
        "rationale.includeNodeModules": {
          "type": "boolean",
          "default": false,
          "description": "Include node_modules when scanning workspace"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "build": "npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "node-fetch": "^2.6.7",
    "tree-sitter": "^0.21.1",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.1"
  }
}
